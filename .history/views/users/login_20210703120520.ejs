<% layout('layouts/boilerplate') %>

<h1>Register!</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="location">Username:</label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="location">Email:</label>
        <input class="form-control" type="email" id="email" name="email" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="location">Passwod:</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <button class="btn btn-success">Register now!</button>
</form>